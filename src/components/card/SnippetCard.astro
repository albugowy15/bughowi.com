---
import type { CollectionEntry } from "astro:content";
import Chip from "@/components/Chip.astro";

interface Props {
  snippet: CollectionEntry<"snippets">;
}

const { snippet } = Astro.props;
---

<a
  class="group flex flex-col p-4 gap-3 rounded-sm cursor-pointer border hover:bg-content1 transition-transform ease-in-out hover:scale-[1.02]"
  href={`/snippets/${snippet.slug}`}
  title={snippet.data.title}
  aria-label={snippet.data.title}
>
  <h3
    class="text-lg font-bold hover:text-primary transition-colors line-clamp-2"
  >
    {snippet.data.title}
  </h3>
  <div class="flex flex-wrap gap-1">
    {
      snippet.data.categories.map((category) => (
        <Chip variant="bordered" radius="sm" size="sm">
          # {category}
        </Chip>
      ))
    }
  </div>
  <p class="line-clamp-3 text-foreground/70">{snippet.data.description}</p>
</a>
