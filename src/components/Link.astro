---
import { type HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';

const link = cva('a', {
	variants: {
		variant: {
			default: '',
			underline: 'underline',
			block: 'px-1.5 py-1.5 rounded-lg bg-default',
		},
		size: {
			sm: 'text-sm',
			md: 'text-base',
			lg: 'text-lg',
		},
	},
});
export interface Props extends HTMLAttributes<'a'>, VariantProps<typeof link> {}

const { class: className, variant = 'default', size = 'md', ...rest } = Astro.props;
---

<a class={link({ variant, size, className })} {...rest}>
	<slot />
</a>
