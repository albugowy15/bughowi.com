---
import { CollectionEntry, getCollection } from 'astro:content';
import Heading1 from '../../components/typography/Heading1.astro';
import Text from '../../components/typography/Text.astro';
import Layout from '../../layouts/Layout.astro';
import { compareDesc } from 'date-fns';
import { Image } from 'astro:assets';

type StaticPath = {
  params: {
    slug: string;
  };
};

interface Props {
  post: CollectionEntry<'projects'>;
}

export async function getStaticPaths(): Promise<StaticPath[]> {
  let blogCllection = await getCollection('projects');
  return blogCllection
    .sort((a, b) => compareDesc(a.data.date, b.data.date))
    .map((post) => ({
      params: {
        slug: post.slug,
      },
      props: {
        post,
      },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={post.data.title}
  type='article'
  img={post.data.thumbnail}
  description={post.data.description}
  url={'https://www.bughowi.com/projects' + post.slug}
>
  <div class='py-4'></div>
  <main class='mx-auto w-full lg:w-[65%]'>
    <Heading1>{post.data.title}</Heading1>
    <Text variant='body1'>{post.data.description}</Text>
    <article class='mt-5 w-full'>
      {
        post.data.thumbnail && (
          <Image
            src={post.data.thumbnail}
            alt={post.data.title}
            height={1080}
            width={720}
            class='rounded-lg'
          />
        )
      }
      <div class='py-4'></div>
      <div id='content-space' class='prose prose-invert max-w-none'>
        <Content />
      </div>
      <div class='mt-3 border-y-2 border-slate-400'>
        <p class='flex flex-wrap items-center gap-2 py-4'>
          Tech Stack :{' '}
          {
            post.data.tech?.map((tech) => (
              <span class='rounded-md bg-blueAccent px-1 py-0.5 text-slate-100'>
                {tech}
              </span>
            ))
          }
        </p>
      </div>
    </article>
    <div class='py-4'></div>
    <!-- Giscus comment -->
  </main>
</Layout>
<style lang='scss'>
  #content-space {
    p {
      @apply text-base text-slate-200;
    }
    h1 {
      @apply text-3xl;
    }
    h2 {
      @apply text-xl;
    }
    h3 {
      @apply text-xl;
    }
    h4 {
      @apply text-lg;
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply scroll-my-16 font-bold text-white;
    }
    blockquote {
      @apply border-l-4 border-blueAccent bg-darkSecondary px-3 py-2 font-bold italic text-slate-200;
    }
    ol {
      @apply ml-5 list-decimal;
    }

    ul {
      @apply ml-5 list-disc;
    }

    a {
      @apply text-[#6d90e2] underline-offset-2 transition-transform ease-linear hover:text-[#4276ee] hover:underline;
    }
  }
</style>
